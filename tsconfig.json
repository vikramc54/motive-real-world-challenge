{
  "compilerOptions": {
    "resolveJsonModule": true,
    "strict": true,
    "module": "CommonJS",
    "target": "esnext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "lib": ["dom", "es6"],
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "types": ["node", "jest"],
    "paths": {
      "@/config/*": ["config/*"],
      "@/controllers/*": ["controllers/*"],
      "@/db/*": ["db/*"],
      "@/middleware/*": ["middleware/*"],
      "@/models/*": ["models/*"],
      "@/routes/*": ["routes/*"],
      "@/schemas/*": ["schemas/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
    },
    "ignoreDeprecations": "6.0"
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [
    "src/**/*.ts",
    "src/tests/**/*.ts"
  ],
  "files": [
    "src/index.ts"
  ],
}